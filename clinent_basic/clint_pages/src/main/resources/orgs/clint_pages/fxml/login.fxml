<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="orgs.clint_pages.controllers.LoginController">
    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
    </padding>

    <Label styleClass="title-label" text="Welcome Back!">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <TextField fx:id="usernameField" promptText="Username or Email" maxWidth="300"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300"/>

    <Button fx:id="loginButton" maxWidth="300" mnemonicParsing="false" onAction="#handleLoginButtonAction" styleClass="action-button" text="Login" />
    <Button fx:id="registerButton" maxWidth="300" mnemonicParsing="false" onAction="#handleRegisterButtonAction" styleClass="secondary-button" text="Create Account" />
</VBox>