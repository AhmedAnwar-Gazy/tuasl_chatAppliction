<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="orgs.clint_pages.controllers.RegistrationController">
    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
    </padding>

    <Label styleClass="title-label" text="Create New Account">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <TextField fx:id="usernameField" promptText="Username" maxWidth="300"/>
    <TextField fx:id="emailField" promptText="Email" maxWidth="300"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" maxWidth="300"/>

    <Button fx:id="registerButton" maxWidth="300" mnemonicParsing="false" onAction="#handleRegisterButtonAction" styleClass="action-button" text="Register" />
    <Button fx:id="backButton" maxWidth="300" mnemonicParsing="false" onAction="#handleBackButtonAction" styleClass="secondary-button" text="Back to Login" />
</VBox>