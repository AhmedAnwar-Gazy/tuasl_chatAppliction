<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid background color -->
    <solid android:color="@color/backgrount_style_black_1" /> <!-- Change to your preferred background color -->

    <!-- Border/stroke properties -->
    <stroke
        android:width="1dp"
        android:color="@color/background_style_black_2" /> <!-- Border color -->

    <!-- Corner radius (rounded corners) -->
    <corners
        android:radius="16dp" /> <!-- Optimal radius for buttons/fields -->

    <!-- Padding to ensure content doesn't touch the edges -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>